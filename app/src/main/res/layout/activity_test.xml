<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.famnet.famnet.TestActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/main_layout">
    <Button
        android:layout_width="match_parent"
        android:id="@+id/account_activity_button"
        android:text="account activity"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="chat activity"
        android:id="@+id/chat_activity_button"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="new task activity"
        android:id="@+id/new_task_activity_button"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="personal task activity"
        android:id="@+id/personal_task_activity_button"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="tasks activity"
        android:id="@+id/tasks_activity_button"
        android:layout_height="wrap_content"/>

</LinearLayout>

    <android.support.design.widget.BottomNavigationView
        app:layout_constraintBottom_toTopOf="parent"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>


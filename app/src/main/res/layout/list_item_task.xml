<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:padding="8dp"
    android:weightSum="10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"

        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/task_name_text_view"
            android:text="Task Name"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/task_reward_text_view"
            android:text="Task Reward"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/task_deadline_text_view"
            android:text="Task Deadline"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_weight="2"
        android:id="@+id/task_take_button"
        android:text="@string/task_take"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.famnet.famnet.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!-- LOGOUT SECTION -->
    <ImageView
        android:id="@+id/sign_out_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:onClick="onClickLogOut"
        android:src="@mipmap/ic_keyboard_tab_black_36dp"/>

    <!-- PROFILE IMAGE SECTION -->
    <RelativeLayout
        android:id="@+id/ImageProfileLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/logout">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_account2"/>
    </RelativeLayout>

    <!-- NAME SECTION -->
    <LinearLayout
        android:id="@+id/NameLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ImageProfileLayout">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/account_name"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- GROUP SECTION -->
    <LinearLayout
        android:id="@+id/GroupLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/NameLayout">

        <ImageView
            android:id="@+id/GroupIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_group_black_24dp"/>

        <TextView
            android:id="@+id/Group"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/account_group"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/NameLayout"/>
    </LinearLayout>

    <!-- ROLE SECTION -->
    <LinearLayout
        android:id="@+id/RoleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/GroupLayout">

        <ImageView
            android:id="@+id/RoleIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_account_box_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/GroupIcon"/>

        <TextView
            android:id="@+id/Role"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/account_role"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/GroupLayout"/>
    </LinearLayout>

    <!-- EMAIL SECTION -->

    <LinearLayout
        android:id="@+id/EmailLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/RoleLayout">


        <ImageView
            android:id="@+id/EmailIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_email_black_24dp"/>

        <TextView
            android:id="@+id/Email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Email"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/RoleLayout"/>
    </LinearLayout>

    <!-- PASSWORD SECTION -->
    <LinearLayout
        android:id="@+id/PasswordLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/EmailLayout">


        <ImageView
            android:id="@+id/PasswordIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_vpn_key_black_24dp"/>

        <TextView
            android:id="@+id/Password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Password"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/EmailLayout"/>
    </LinearLayout>

    <!-- ADD MEMBER SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/AddMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickAddMember"
            android:src="@mipmap/ic_person_add_black_24dp"/>

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onClickAddMember"
            android:src="@mipmap/ic_settings_applications_black_24dp"/>
    </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toTopOf="parent"
        app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>

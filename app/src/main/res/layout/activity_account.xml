<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.famnet.famnet.AccountActivity">

    <!-- LOGOUT SECTION -->

    <ImageView
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickLogOut"/>

    <!-- PROFILE IMAGE SECTION -->
    <RelativeLayout
        android:id="@+id/ImageProfileLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/logout">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"



            />

        <ImageView
            android:id="@+id/ImageProfileEditIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:onClick="onClickProfileImageEdit"
            />


    </RelativeLayout>

    <!-- NAME SECTION -->

    <LinearLayout
        android:id="@+id/NameLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageProfileLayout">



        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"

            app:layout_constraintTop_toBottomOf="@+id/imageProfile"/>

        <ImageView
            android:id="@+id/NameEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/imageProfile"
            android:onClick="onClickNameEdit"/>
    </LinearLayout>

    <!-- GROUP SECTION -->

    <LinearLayout
        android:id="@+id/GroupLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/NameLayout">

        <ImageView
            android:id="@+id/GroupIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/NameIcon"/>

        <TextView
            android:id="@+id/Group"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/NameLayout"/>

        <ImageView
            android:id="@+id/GroupEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/Group"
            app:layout_constraintTop_toBottomOf="@+id/imageProfile"
            android:onClick="onClickGroupEdit"/>

    </LinearLayout>

    <!-- ROLE SECTION -->
    <LinearLayout
        android:id="@+id/RoleLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/GroupLayout">


        <ImageView
            android:id="@+id/RoleIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/GroupIcon"/>

        <TextView
            android:id="@+id/Role"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/GroupLayout"/>

        <ImageView
            android:id="@+id/RoleEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/Role"
            app:layout_constraintTop_toBottomOf="@+id/GroupLayout"
            android:onClick="onClickRoleEdit"/>
    </LinearLayout>

    <!-- EMAIL SECTION -->

    <LinearLayout
        android:id="@+id/EmailLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/RoleLayout">


        <ImageView
            android:id="@+id/EmailIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/RoleIcon"/>

        <TextView
            android:id="@+id/Email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/RoleLayout"/>

        <ImageView
            android:id="@+id/EmaileEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/Email"
            app:layout_constraintTop_toBottomOf="@+id/RoleLayout"
            android:onClick="onClickEmailEdit"/>
    </LinearLayout>

    <!-- PASSWORD SECTION -->

    <LinearLayout
        android:id="@+id/PasswordLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/EmailLayout">


        <ImageView
            android:id="@+id/PasswordIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/EmailIcon"/>

        <TextView
            android:id="@+id/Password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/EmailLayout"/>

        <ImageView
            android:id="@+id/PasswordEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@+id/Password"
            app:layout_constraintTop_toBottomOf="@+id/EmailLayout"
            android:onClick="onClickPasswordEdit"/>
    </LinearLayout>

    <!-- ADD MEMBER SECTION -->
    <ImageView
        android:id="@+id/AddMember"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:onClick="onClickAddMember"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toTopOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
